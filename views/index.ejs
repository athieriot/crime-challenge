<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>crime-challenge</title>
        <meta name="description" content="Coding challenge for an Introduction to Node.js at work">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="css/core.css">
        <link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.min.css">
    </head>
    <body>

	<!--[if lt IE 8]>
		<p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
	<![endif]-->

    <div class="container">
    	<div class="jumbotron">
        	<h1>crime-challenge</h1>
       		<p>Coding challenge for an Introduction to Node.js at work</p>
		</div>
	</div>

    <div class="container">
  <% if (locals.users) { %>
    <% users.forEach(function(user){ %>
      <div class="row" id="<%= user._id%>">
        <div class="col-md-9">
          <div  id="<%= user._id%>-map"
                class="usermap"
                data-city="<%= user.city%>"
                data-id="<%= user._id%>"
                >
          </div>
        </div>
        <div class="col-md-2">
          <img width="64px" src="<%= user.avatar %>" class="thumbnail">
          <strong><%= user.name %></strong>
          <div class="points"><%= user.points | 0 %></div>
          <div class="alert alert-success" style="display:none;">connected</div>
        </div>
      </div>
      <hr />
    <% }) %>
  <% } %>
</div>

  <!-- socket.io -->
  <script src="socket.io/socket.io.js"></script>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
  <script src="bower_components/jquery/dist/jquery.min.js"></script>
  <script src="bower_components/gmaps/gmaps.js"></script>
	<!-- APP CODE -->
	<script src="js/app.min.js"></script>
  </body>
</html>
